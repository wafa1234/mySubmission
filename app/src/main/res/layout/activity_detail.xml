<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   tools:context=".DetailActivity"
                                                    android:background="@drawable/background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_item_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="100dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:src="@android:color/darker_gray"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_margin_horizontal"
                android:layout_marginLeft="@dimen/activity_margin_horizontal">

                        <TableRow
                                style="@style/table_row_style">

                                <TextView
                                    android:text="Naama Lengkap:"/>

                                <TextView
                                        android:id="@+id/tv_item_name"
                                        tools:text="nama"
                                        android:layout_marginLeft="@dimen/activity_margin_horizontal"/>

                        </TableRow>

                        <TableRow
                                style="@style/table_row_style">

                                <TextView
                                        android:text="Nama Panggilan:"/>

                                <TextView
                                        android:id="@+id/tv_item_panggilan"
                                        tools:text="nama panggilan"
                                        android:layout_marginLeft="@dimen/activity_margin_horizontal"/>

                        </TableRow>

                        <TableRow
                                style="@style/table_row_style">

                                <TextView
                                        android:text="TTL"/>

                                <TextView
                                        android:id="@+id/tv_item_ttl"
                                        tools:text="tempat tanggal lahir"
                                        android:layout_marginLeft="@dimen/activity_margin_horizontal"/>
                        </TableRow>

                        <TableRow
                                style="@style/table_row_style">

                                <TextView
                                        android:text="Alamat Tinggal"/>

                                <TextView
                                        android:id="@+id/tv_item_alamat"
                                        tools:text="alamat kos"
                                        android:layout_marginLeft="@dimen/activity_margin_horizontal"/>
                        </TableRow>

        </TableLayout>

        <Button
                android:id="@+id/hubungi"
                android:layout_marginLeft="@dimen/activity_margin_horizontal"
                android:layout_marginRight="@dimen/activity_margin_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hubungi"/>


    </LinearLayout>
</ScrollView>